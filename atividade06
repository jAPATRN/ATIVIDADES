package Desafios;
import java.util.Scanner;
public class Desafio06 {

	public static void main(String[] args) {
		
		Scanner scanner = new Scanner(System.in);
		
		System.out.print("Digite um número: ");
		int numero = scanner.nextInt();
		
		if (numero >0) {
			System.out.print("O número é Positivo.");
		}
		
		else if (numero <0) {
			System.out.print("O número é Negativo.");
		}
		
		else if (numero == 0) {
			System.out.print("O número Zero não é Positivo e nem Negativo.");
		}
		else { System.out.print("Número não identificado.");
		}
		// Erro com excessão, deve ser tratado anteriormente
		scanner.close();

	}

}
