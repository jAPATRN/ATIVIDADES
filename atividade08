package Desafios;
import java.util.Scanner;
public class Desafio08 {

	public static void main(String[] args) {
		
		Scanner scanner = new Scanner(System.in);

		System.out.println("Digite uma das opções: (1) - Domingo | (2) - Segunda | (3) - Terça | (4) - Quarta | (5) - Quinta | (6) - Sexta | (7) - Sábado :");
		
		String dia = scanner.nextLine().toUpperCase();
		
		switch (dia) {
		case "1":
			System.out.print("Domingo é no Final de Semana.");
			break;
		
		case "2":
			System.out.print("Segunda feira é dia Útil.");
			break;
		
		case "3":
			System.out.print("Terça feira é dia Útil.");
			break;
			
		case "4":
			System.out.print("Quarta feira é dia Útil.");
			break;
			
		case "5":
			System.out.print("Quinta feira é dia Útil.");
			break;
			
		case "6":
			System.out.print("Sexta feira é dia Útil.");
			break;
			
		case "7":
			System.out.print("Sábado é no Final de Semana.");
			break;
			
		default:
			System.out.print("Dia não reconhecido");
			break;	
		}
		scanner.close();
	}
}
